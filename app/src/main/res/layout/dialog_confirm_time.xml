<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/item_bg_has_corner">


    <RelativeLayout
        android:id="@+id/rl_morning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/rb_morning"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:background="@drawable/shop_item_selector"
            android:button="@null"
            android:clickable="false" />

        <TextView
            android:id="@+id/tv_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rb_morning"
            android:text="@string/morning"
            android:textColor="@color/primary"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_morning_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_morning_num"
            android:layout_alignRight="@+id/tv_morning_num"
            android:gravity="center"
            android:text="8:00-14:00"
            android:textColor="@color/blue_light"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_morning_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rb_morning"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_morning"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="（可预约人数10人)"
            android:textColor="@color/primary_light"
            android:textSize="12sp" />

        <!--<TextView-->
            <!--android:id="@+id/tv_morning_has_people"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:text="已预约10人"-->
            <!--android:textSize="10sp" />-->
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_morning"
        android:background="@color/grey_light" />


    <RelativeLayout
        android:id="@+id/rl_aftermoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/rb_aftermoon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:background="@drawable/shop_item_selector"
            android:button="@null"
            android:clickable="false" />

        <TextView
            android:id="@+id/tv_aftermoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rb_aftermoon"
            android:text="@string/aftermoon"
            android:textColor="@color/primary"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_aftermoon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_aftermoon_num"
            android:layout_alignRight="@+id/tv_aftermoon_num"
            android:gravity="center"
            android:text="15:00-20:00"
            android:textColor="@color/blue_light"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_aftermoon_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rb_aftermoon"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_aftermoon"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="（可预约人数10人)"
            android:textColor="@color/primary_light"
            android:textSize="12sp" />

        <!--<TextView-->
            <!--android:id="@+id/tv_aftermoon_has_people"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:text="已预约10人"-->
            <!--android:textSize="10sp" />-->
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_aftermoon"
        android:background="@color/grey_light" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_phone_login"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


</RelativeLayout>