<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_book_time"
        tools:text="00:00 - 00:30"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_toRightOf="@+id/tv_book_time"
        android:id="@+id/iv_yes"
        android:layout_alignTop="@+id/tv_book_time"
        android:layout_alignBottom="@id/tv_book_time"
        android:src="@mipmap/ic_yes"
        android:visibility="invisible"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>