<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_bg_ripple_white">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/btn_confirm"
            android:layout_toStartOf="@+id/btn_confirm"
            android:ellipsize="end"
            android:lines="3"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="系统消系统消息系统消息系统消息系统消息系统消息息" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_confirm"
            android:layout_toStartOf="@+id/btn_confirm"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="2017-12-10 10:15:09" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_red_gradient"
            android:gravity="center"
            android:text="@string/confirm_n"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>