<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_user_header"
        android:layout_marginRight="31dp"
        android:background="@drawable/header_name_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:minWidth="50dp"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp"
            android:textColor="@color/white"
            android:maxLength="20"
            android:textSize="12sp"
            tools:text="陈坚润" />

        <View
            android:layout_width="35dp"
            android:layout_height="0dp"></View>
    </LinearLayout>

    <io.rong.imkit.widget.AsyncImageView
        android:id="@+id/iv_user_header"
        android:layout_marginRight="16dp"
        android:layout_marginTop="35dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_image_bg"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rc_default_portrait"
        android:tint="#ffffff"
        app:RCShape="circle" />

    <TextView
        android:id="@+id/tv_remind_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_user_header"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/iv_user_header"
        android:textColor="#DC4884"
        android:textSize="12sp"
        tools:text="00:11:56" />

</RelativeLayout>