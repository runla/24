<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--聊天气泡框BubbleImageView自定义属性-->
    <declare-styleable name="BubbleImageView">
        <attr name="bubble_angle" format="dimension"></attr>
        <attr name="bubble_arrowOffset" format="dimension"></attr>
        <attr name="bubble_arrowTop" format="dimension"></attr>
        <attr name="bubble_arrowHeight" format="dimension"></attr>
        <attr name="bubble_arrowWidth" format="dimension"></attr>
        <attr name="bubble_has_angle" format="boolean">
            <enum name="Yes" value="1"></enum>
            <enum name="No" value="0"></enum>
        </attr>
        <attr name="bubble_arrowOrientation" format="integer">
            <enum name="left" value="0"></enum>
            <enum name="right" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>